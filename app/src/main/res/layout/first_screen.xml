<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/wangyi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sina"
        android:layout_marginLeft="@dimen/dimen_65"
        android:layout_marginTop="@dimen/dimen_90"
        android:src="@mipmap/wangyi" />

    <ImageView
        android:id="@+id/iqiyi"
        android:layout_width="@dimen/dimen_40"
        android:layout_height="@dimen/dimen_40"
        android:layout_alignLeft="@+id/wangyi"
        android:layout_below="@+id/wangyi"
        android:layout_marginTop="@dimen/dimen_10"
        android:src="@mipmap/iqiyi"

        />


    <RelativeLayout
        android:id="@+id/center_box_frame"
        android:layout_width="@dimen/dimen_132"
        android:layout_height="@dimen/dimen_242"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_70"
        android:background="@android:color/darker_gray">


        <ImageView
            android:id="@+id/center_box"
            android:layout_width="@dimen/dimen_130"
            android:layout_height="@dimen/dimen_240"
            android:layout_centerInParent="true"
            android:background="@mipmap/center_box_first"

            />


    </RelativeLayout>


    <ImageView
        android:id="@+id/sina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_70"
        android:layout_marginTop="@dimen/dimen_40"
        android:src="@mipmap/sina" />

    <ImageView
        android:id="@+id/taobao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sina"
        android:layout_marginLeft="@dimen/dimen_230"
        android:layout_marginTop="@dimen/dimen_28"
        android:src="@mipmap/taobao" />
    <ImageView
        android:id="@+id/youku"
        android:layout_width="@dimen/dimen_40"
        android:layout_height="@dimen/dimen_40"
        android:layout_marginTop="@dimen/dimen_22"
        android:layout_marginLeft="@dimen/dimen_240"
        android:layout_below="@+id/mi"
        android:src="@mipmap/youku"
        />

    <ImageView
        android:id="@+id/renren"
        android:layout_width="@dimen/dimen_40"
        android:layout_height="@dimen/dimen_40"
        android:layout_alignTop="@+id/taobao"
        android:layout_toLeftOf="@+id/iqiyi"
        android:layout_toStartOf="@+id/iqiyi"
        android:src="@mipmap/renren" />

    <ImageView
        android:id="@+id/jingdong"
        android:layout_width="@dimen/dimen_40"
        android:layout_height="@dimen/dimen_40"
        android:layout_alignBottom="@+id/sina"
        android:layout_alignRight="@+id/taobao"
        android:src="@mipmap/jingdong" />

    <ImageView
        android:id="@+id/mi"
        android:layout_width="@dimen/dimen_40"
        android:layout_height="@dimen/dimen_40"
        android:layout_alignLeft="@+id/jingdong"
        android:layout_alignStart="@+id/jingdong"
        android:layout_below="@+id/taobao"
        android:layout_marginTop="@dimen/dimen_40"
        android:src="@mipmap/mi" />




    <RelativeLayout
        android:id="@+id/text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/center_box_frame"
        android:layout_marginTop="@dimen/dimen_65">


    </RelativeLayout>


    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/center_box_frame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_90"
        android:text="@string/first_title"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_26" />


    <TextView
        android:id="@+id/desc_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_text"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:text="@string/first_desc"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_16" />

</RelativeLayout>